#!/usr/bin/env bash
cat <<'FIG'
╭━━━┳━━━╮╭╮╱╭╮╭━━╮╱╱╱╱╱╭╮╱╱╱╭╮╭╮╱╱╱╭╮
┃╭━╮┃╭━╮┃┃┃╱┃┃╰┫┣╯╱╱╱╱╭╯╰╮╱╱┃┃┃┃╱╱╭╯╰╮
┃╰━╯┃╰━╯┣┫╰━╯┃╱┃┃╭━╮╭━┻╮╭╋━━┫┃┃┃╭━┻╮╭╋┳━━┳━╮
┃╭╮╭┫╭━━╋╋━━╮┃╱┃┃┃╭╮┫━━┫┃┃╭╮┃┃┃┃┃╭╮┃┃┣┫╭╮┃╭╮╮
┃┃┃╰┫┃╱╱┃┃╱╱┃┃╭┫┣┫┃┃┣━━┃╰┫╭╮┃╰┫╰┫╭╮┃╰┫┃╰╯┃┃┃┃
╰╯╰━┻╯╱╱╰╯╱╱╰╯╰━━┻╯╰┻━━┻━┻╯╰┻━┻━┻╯╰┻━┻┻━━┻╯╰╯

TOKEN="$(cat /boot/token)"
cd $HOME
TOKEN >> .token
sudo sed -i -- "s/#xserver-command=X/xserver-command=X -nocursor/" /etc/lightdm/lightdm.conf
sudo mkdir /opt/autostart
echo '[Desktop Entry]\nName=start-chrome.sh\nExec=/opt/autostart/start-chrome.sh\nType=Application\nTerminal=false' >> start-chrome.desktop
sudo cp start-chrome.desktop /etc/xdg/autostart/
echo '#!/bin/bash\nxset dpms force off\nsleep 3s\nxset s noblank\nxset s off\nxset -dpms\nxset dpms force on\nxrandr --output HDMI-1 --rotate left\nchromium-browser --noerrdialogs --disable-infobars --disable-pinch  --kiosk https://www.officesm.flyingatom.tech/landing.php?token='$TOKEN >> start-chrome.sh
sudo cp start-chrome.sh /opt/autostart/
sudo chmod +x /opt/autostart/start-chrome.sh

vcgencmd measure_temp
cpu=$(</sys/class/thermal/thermal_zone0/temp)
echo "$((cpu/1000)) c"

wget https://download.teamviewer.com/download/linux/teamviewer_arm64.deb
sudo dpkg -i teamviewer_arm64.deb
apt-cache policy teamviewer
sudo apt-get -f install -y
sudo teamviewer license accept
sudo teamviewer --daemon enable
sudo teamviewer --daemon disable
sudo teamviewer passwd 123321
sudo teamviewer --daemon restart
echo "Installation Complete"
